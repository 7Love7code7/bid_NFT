// overwrite
html
  font-family $family-content
  font-size 16px
  word-spacing 1px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box
  background-color $dark

*,
*::before,
*::after
  box-sizing border-box
  margin 0

h1, h2, h3, h4, h5
  font-family $family-display
  text-transform uppercase

.el-notification__content
  text-align left !important

.el-carousel__button
  height 5px !important
  background-color $grey !important

.el-popover
  font-size 14px !important

.el-popover__title
  margin-bottom $space-xs !important
  font-weight $weight-bold
  font-size 14px !important

.el-drawer__wrapper
  box-shadow 0 0 13px 0px rgba(0,0,0,0.15)

.el-dialog__header
  font-weight $weight-bold
  padding 24px $space-m $space-m $space-m !important

// end overwrite

.is-muted
  color $grey

.is-display
  font-family $family-display

.is-text-left
  text-align left !important

.is-text-center
  text-align center !important

.is-text-right
  text-align right !important

.container
  &.is-full-screen
    background-color $dark
    width 100%
    height 100vh
    max-height -webkit-fill-available
    display flex
    justify-content center
    align-items center
    overflow hidden

  &.is-min-height
    min-height 100vh

  &.is-light
    background-color $light

  &.is-dark
    background-color $dark

.overlay
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  display flex
  justify-content center
  align-items center
  z-index 500
  background-color $black
  backdrop-filter blur(10px)
  transition(opacity, 0.3s, linear)

  &.is-dark
    background-color $dark

  &.is-translucent
    background-color rgba(0,0,0,0.55)

.overlay-container
  width 750px
  max-width 90%
  margin auto
  color white

  &.is-narrow
    width 400px


.heading
  padding $space-l 0 $space-s $space-l

  h2
    font-size 26px
    margin-bottom $space-xs

  p
    margin-bottom 0


.button-list
  margin-bottom 24px

  .el-button
    position relative
    text-decoration none
    display block
    margin-bottom $size-s
    width 100%
    background-color transparent !important
    font-size $size-m
    border 1px white solid
    padding 18px 20px
    opacity 0.65
    transition(opacity)

    .icon
      position absolute
      left $space-m
      top 52%
      transform translateY(-50%)

    .icon.el-icon-loading
      top 35%

    &:hover
      opacity 1
      border-color white

    &:active,
    &:focus
      opacity 0.65
      border-color white
      background-color white !important
      color $dark

    &.is-disabled
      opacity 0.3

      &:hover
        opacity 0.3 !important

  .el-button+.el-button
    margin-left 0


// transitions
.replace-enter,
.replace-leave-to
  opacity 0 !important


// various
.dissidents
  position absolute
  right 32px
  bottom 32px
  z-index 100
  width 48px
  filter grayscale(100%)
  opacity 0.35
  transform-origin bottom right
  transition()

  &:hover
    filter grayscale(0%)
    opacity 1
    transform scale(1.4)

  img
    width 100%

.drop-grid
  width 100%
  grid(1fr, $space-m)

  +for_breakpoint(sm)
    grid(1fr 1fr, $space-m)

  +for_breakpoint(md)
    grid(1fr 1fr 1fr, $space-m)

  +for_breakpoint(lg)
    grid(1fr 1fr 1fr 1fr, $space-m)

  +for_breakpoint(xl)
    grid(1fr 1fr 1fr 1fr 1fr, $space-m)


.home-grid
  width 100%
  grid(1fr 1fr 1fr, $space-xs)


article
    h1
      text-transform none
      margin-bottom $space-s

    h3,h4,h5
      margin-top $space-l

    a
      text-decoration none

      &:not(.el-button)
        color $dark

    .el-button
      margin $space-s 0

    hr
      margin $space-m 0
      opacity 0.5

    .link-list
      margin $space-s 0

      a
        display block
        padding $space-s 0
        border-bottom 1px rgba(0,0,0,0.1) solid


.simple-list
  padding $space-m 0

  .truncate
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    width 100%
    display block

.simple-list-item
  display flex
  align-items center
  justify-content flex-start
  padding $space-s 0
  border-bottom 1px rgba(0,0,0,0.1) solid

  .el-avatar + .label
    padding-left $space-s

  .label
    width 80%

    small
      display block
      font-size 14px
      color $grey

.card
  position relative

  .action
    display block
    padding $space-s

  .card-image
    width 100%
    ratio(1, 1)
    background-color $dark
    display block

  .card-image-spacing
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center

    .image
      width 100%
      max-width 100%
      max-height 100%
      position absolute

      &.is-overlay
        z-index 10
        transition()

        &:hover
          opacity 0

  .details
    .title
      display block
      width 100%
      font-size 16px
      family $family-display
      font-weight bold

    .meta
      font-size 14px
      color $grey

  .card-footer
    display flex
    justify-content space-between
    align-items center
    padding $space-s $space-s $space-s $space-m

    .el-button
      margin-right $space-xs
